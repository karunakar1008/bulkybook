@model IEnumerable<Category>

<h1>Index category</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">@obj.Name</td>
                <td width="30%">@obj.DisplayOrder</td>
                <td>
                    <a asp-action="Edit" asp-route-id=@obj.Id class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> &nbsp; Edit</a>
                    <a asp-action="Delete" asp-route-id=@obj.Id class="btn btn-danger mx-2"><i class="bi bi-trash3"></i> &nbsp; Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
